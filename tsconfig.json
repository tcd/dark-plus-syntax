{
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        // "files": true,
    },
    "include": [
        "./src", "ignore/todo copy.ts", "ignore/rename-settings.ts", "ignore/todo.ts",
    ],
    // "files": [
    //     "./src/@types/index.d.ts",
    // ],
    "exclude": [
        "./ignore",
        "./test/samples",
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "dom",
            "esnext",
        ],
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@lib": ["./src/lib/index.ts"],
            "@types": ["./src/types/index.ts"],
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
}
